                                        </ComboBoxItem.Tag>
                                    </ComboBoxItem>
                                    <ComboBoxItem Content="{ll:Str '10 分钟'}">
                                        <ComboBoxItem.Tag>
                                            <system:Int32>600</system:Int32>
                                        </ComboBoxItem.Tag>
                                    </ComboBoxItem>
